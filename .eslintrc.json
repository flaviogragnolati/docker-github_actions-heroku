{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:import/typescript",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "import/no-unresolved": "error",
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": [
            "error"
        ]
    },
    "ignorePatterns": [
        "build/*",
        "dist/*"
    ]
}